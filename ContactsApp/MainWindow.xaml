<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactsApp"
        xmlns:Views="clr-namespace:ContactsApp.Views" x:Class="ContactsApp.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225*" MaxWidth="225"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="CONTACTS" HorizontalAlignment="Center" Margin="1,1,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" FontFamily="Unispace"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Search" VerticalAlignment="Center" Margin="40,0,0,0" FontFamily="Unispace"/>
        <TextBox x:Name="txtSearch" Grid.Column="0" Grid.Row="1" TextWrapping="Wrap" Text="" Width="125" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0,10,0"/>
        <Grid Grid.Column="0" Grid.Row="2">
            <ListView x:Name="contactsListView" FontFamily="Unispace" d:ItemsSource="{Binding contacts}" PreviewMouseLeftButtonUp="listView_Click" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock x:Name="contactItem" Text="{Binding FullName}" Margin="2"  />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Button x:Name="btnAdd" Background="white" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="0"  Height="30" Width="30">
            <Image Source="Resources\AddContact.png" Height="30"/>
        </Button>
        <Button x:Name="btnSettings" Background="white" Grid.Column="1" Grid.Row="0" Margin="2,2,10,2" Height="30" Width="30" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Image Source="Resources\SettingsGear.png"/>
        </Button>

        <ContentControl x:Name="MainWindowContentArea" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" MinHeight="300" MinWidth="350" Margin="0,0,0,0"/>


    </Grid>
</Window>
